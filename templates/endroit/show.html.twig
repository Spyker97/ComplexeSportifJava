{% extends 'back_office/base.html.twig' %}

{% block title %}Endroit{% endblock %}

{% block content %}
<style>
        .img{
            width: 60px;
            height: 60px;
            background-size: cover;
            display: block;
            border-radius: 100px;
            -webkit-border-radius: 100px;
            -moz-border-radius: 100px;
        }
    </style>
    <h1>Endroit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ endroit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ endroit.nom }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ endroit.type }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ endroit.description }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ endroit.longitude }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ endroit.latitude }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ endroit.numero }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img  src="{{ asset("assets/img/") }}{{endroit.image}}" alt="" class="img"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_endroit_index') }}">back to list</a>

    <a href="{{ path('app_endroit_edit', {'id': endroit.id}) }}">edit</a>

    {{ include('endroit/_delete_form.html.twig') }}
{% endblock %}
